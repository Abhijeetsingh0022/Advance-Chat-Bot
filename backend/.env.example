# Environment Variables Example
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=sqlite:///./chatbot.db
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/chatbot_db

# Security
SECRET_KEY=your-super-secret-key-change-this-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
EMAIL__GMAIL_FROM_EMAIL=your-email@gmail.com
EMAIL__GMAIL_APP_PASSWORD=your-gmail-app-password

# AI Services API Keys
AI_SERVICES__OPEN_ROUTER_API_KEY_XAI=your-xai-api-key
AI_SERVICES__OPEN_ROUTER_API_KEY_DEEPSEEK=your-deepseek-api-key
AI_SERVICES__OPEN_ROUTER_API_KEY_GPT_OSS=your-gpt-oss-api-key
AI_SERVICES__GROQ_API_KEY=your-groq-api-key
AI_SERVICES__OPEN_ROUTER_API_KEY_1=your-openrouter-key-1
AI_SERVICES__OPEN_ROUTER_API_KEY_2=your-openrouter-key-2
AI_SERVICES__GEMINI_API_KEY=your-gemini-api-key

# OpenWeatherMap API Key (for weather tool)
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key

# Rate Limiting Configuration
RATE_LIMIT__GENERAL_REQUESTS_PER_MINUTE=100
RATE_LIMIT__CHAT_REQUESTS_PER_MINUTE=10
RATE_LIMIT__CHAT_WITH_FILES_REQUESTS_PER_MINUTE=5
RATE_LIMIT__USER_REQUESTS_PER_MINUTE=60
RATE_LIMIT__BULK_OPERATIONS_PER_MINUTE=20

# Redis (Optional - for distributed rate limiting)
REDIS_URL=redis://localhost:6379

# CORS Configuration
FRONTEND_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
